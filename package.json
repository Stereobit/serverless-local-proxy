{
  "name": "serverless-local-proxy-monorepo",
  "version": "0.0.0.development",
  "description": "Serverless local proxy",
  "main": "src/index.js",
  "scripts": {
    "test": "jest",
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once",
    "lerna-bootstrap": "lerna bootstrap --use-workspaces",
    "lerna-test": "lerna run test --use-workspaces",
    "lerna-add": "lerna --use-workspaces add ",
    "lerna-publish" : "lerna publish --use-workspaces --conventional-commits --npm-tag=latest",
    "redux-dev-server": "packages/plugin/node_modules/.bin/remotedev --hostname=localhost --port=8001"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/useless-stuff/serverless-local-proxy.git"
  },
  "author": "Diego Anniballo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/useless-stuff/serverless-local-proxy/issues"
  },
  "homepage": "https://github.com/useless-stuff/serverless-local-proxy#readme",
  "peerDependencies": {
    "serverless": "^1.28.0"
  },
  "devDependencies": {
    "commitizen": "^2.7.6",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.19.1",
    "jest": "^23.4.1",
    "lerna": "^2.11.0",
    "standard": "^11.0.1",
    "travis-deploy-once": "^5.0.1"
  },
  "dependencies": {
    "babel-eslint": "^8.2.3",
    "eslint": "^4.19.1",
    "jest": "^23.4.1"
  },
  "private": true,
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  },
  "workspaces": [
    "packages/*"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "standard": {
    "ignore": [
      "packages/**/tests/**/*",
      "packages/**/__mocks__"
    ]
  }
}
